<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.claudyanearj.aphv.MainActivity"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="229dp">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/hops"
            android:id="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="400dp" />

    </LinearLayout>

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_weight="20"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_alignTop="@+id/imageView4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:weightSum="1"
        android:layout_marginTop="278dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_height="122dp"
            app:srcCompat="@drawable/p11"
            android:id="@+id/services"
            android:background="#ffffffff"
            android:layout_weight="0.23"
            android:layout_width="103dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            app:srcCompat="@drawable/p22"
            android:id="@+id/imageButton15"
            android:layout_weight="0.24"
            android:background="#ffffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            app:srcCompat="@drawable/p33"
            android:id="@+id/btTell"
            android:layout_weight="0.42"
            android:background="#ffffffff"
            android:onClick="chamaTela"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="44dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/iconelogin"
        android:id="@+id/imageView4"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="158dp"
        android:weightSum="1"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </LinearLayout>

</RelativeLayout>
